{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off", // Allows the use of 'any' type
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }], // Ignore unused variables prefixed with '_'

    // Node.js and CommonJS rules
    "no-console": "warn", // Warns about the use of console.log
  
    "indent": ["error", 2], 
    "semi": ["error", "always"] // Enforces the use of semicolons

   
    }
}
